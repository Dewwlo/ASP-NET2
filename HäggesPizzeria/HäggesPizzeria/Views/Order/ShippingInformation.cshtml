@model Order
<div class="row">
    <div class="col-md-6">
        <form asp-action="ValidateShippingInformation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label"></label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Adress" class="control-label"></label>
                <input asp-for="@Model.Adress" class="form-control" />
                <span asp-validation-for="@Model.Adress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Zipcode" class="control-label"></label>
                <input asp-for="@Model.Zipcode" class="form-control" />
                <span asp-validation-for="@Model.Zipcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PhoneNumber" class="control-label"></label>
                <input asp-for="@Model.PhoneNumber" class="form-control" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Proceed to payment" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>  