@model Payment

@{
    ViewData["Title"] = "Payment";
}

<h2>Payment</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="ValidatePayment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.CardNumber" class="control-label"></label>
                <input maxlength="16" asp-for="@Model.CardNumber" class="form-control"/>
                <span asp-validation-for="@Model.CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Year" class="control-label"></label>
                <input max="2050" asp-for="@Model.Year" class="form-control"/>
                <span asp-validation-for="@Model.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Month" class="control-label"></label>
                <input max="12" asp-for="@Model.Month" class="form-control"/>
                <span asp-validation-for="@Model.Month" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cvc" class="control-label"></label>
                <input maxlength="3" asp-for="@Model.Cvc" class="form-control"/>
                <span asp-validation-for="@Model.Cvc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Pay" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>  