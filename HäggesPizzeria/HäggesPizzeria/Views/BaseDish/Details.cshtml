@model BaseDish

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Dish</h4>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            Name:
        </dd>
        <dt>
            @Model.Name
        </dt>
        <dd>
            Price:
        </dd>
        <dt>
            @Model.Price
        </dt>
    </dl>
</div>
@foreach(var ingredient in Model.BaseDishIngredients)
{
   <div>@ingredient.Ingredient.Name</div>
}
<div>
    <a asp-action="Edit" asp-route-id="@Model.BaseDishId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
