@using Microsoft.AspNetCore.Mvc.Rendering
@using HäggesPizzeria.Models.IngredientViewModels
@model HäggesPizzeria.Models.BaseDish
@inject HäggesPizzeria.Services.IngredientService IngredientService

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Dish</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BaseDishId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label><input type="checkbox" asp-for="IsActive">Dish will be active</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
        <div id="base-dish-ingredients">
            @{
                Html.RenderPartial("_IngredientPartial", new IngedientDishViewModel
                {
                    DishName = Model.Name,
                    Ingredients = IngredientService.GetAllUsedIngredients(Model.BaseDishIngredients),
                    IsOrderedDish = false
                });
            }
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
