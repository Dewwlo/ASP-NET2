@using HäggesPizzeria.Services
@using Microsoft.AspNetCore.Mvc.Rendering
@model HäggesPizzeria.Models.BaseDish
@inject IngredientService IngredientService

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Dish</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BaseDishId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </form>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
        <div class="col-md-6">
            @foreach (var ingredient in Model.BaseDishIngredients)
            {
                <div class="col-lg-12">
                    <p class="col-md-6">@ingredient.Ingredient.Name</p>
                    <button class="col-md-6" onclick="updateIngredient(@Model.BaseDishId, @ingredient.IngredientId, 'false')">Remove</button>
                </div>
            }
        </div>
        <div class="col-md-6">
            @foreach (var ingredient in IngredientService.GetAllActiveIngredients(Model.BaseDishIngredients))
            {
                <div class="col-lg-12">
                    <p class="col-sm-6">@ingredient.Name</p>
                    <button class="col-sm-6" onclick="updateIngredient('@Model.BaseDishId', '@ingredient.IngredientId', 'true')">Add</button>
                </div>
            }
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
