@using System
@using System.Collections.Generic
@using HäggesPizzeria.Services
@model ICollection<Ingredient>
@inject IngredientService IngredientService

<div>
    <div class="col-md-6">
        @foreach (var ingredient in @Model)
        {
            <div class="col-lg-12">
                <p class="col-md-6">@ingredient.Name</p>
                <button class="col-md-6" onclick="updateBaseDishIngredient(@ingredient.IngredientId, 'false')">Remove</button>
            </div>
        }
    </div>
    <div class="col-md-6">
        @foreach (var ingredient in IngredientService.GetAllUnusedIngredients(Model))
        {
            <div class="col-lg-12">
                <p class="col-sm-6">@ingredient.Name</p>
                <button class="col-sm-6" onclick="updateBaseDishIngredient('@ingredient.IngredientId', 'true')">Add</button>
            </div>
        }
    </div>
</div>