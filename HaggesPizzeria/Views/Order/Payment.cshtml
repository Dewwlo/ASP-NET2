@model Payment

@{
    ViewData["Title"] = "Payment";
}

<h2>Payment</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="ValidatePayment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-lg-12">
                <span class="text-danger">@Html.ValidationMessage("Error")</span>
            </div>
            <div class="form-group col-lg-10">
                <label asp-for="@Model.CardNumber" class="control-label"></label>
                <input placeholder="xxxx-xxxx-xxxx-xxxx" maxlength="16" asp-for="@Model.CardNumber" class="form-control"/>
                <span asp-validation-for="@Model.CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-3">
                <label asp-for="@Model.Year" class="control-label"></label>
                <input min="2017" max="2050" asp-for="@Model.Year" class="form-control"/>
                <span asp-validation-for="@Model.Year" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-3">
                <label asp-for="@Model.Month" class="control-label"></label>
                <input max="12" asp-for="@Model.Month" class="form-control"/>
                <span asp-validation-for="@Model.Month" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-2">
                <label asp-for="@Model.Cvc" class="control-label"></label>
                <input maxlength="3" asp-for="@Model.Cvc" class="form-control"/>
                <span asp-validation-for="@Model.Cvc" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-2 payment-button">
                <button type="submit" class="btn btn-success">Pay</button>
            </div>
        </form>
    </div>
</div>  